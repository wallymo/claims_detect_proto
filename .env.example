# ===========================================
# Frontend Environment Variables (app/.env.local)
# ===========================================

# AI API Keys - DEPRECATED: Now handled server-side
# Keep for backward compatibility during migration
VITE_GEMINI_API_KEY=
VITE_ANTHROPIC_API_KEY=
VITE_OPENAI_API_KEY=

# Normalizer Service URL (includes AI proxy endpoints)
VITE_NORMALIZER_URL=http://localhost:3001
# VITE_NORMALIZER_URL=https://your-service.onrender.com  # Production

# Logging Configuration
# Level: error | warn | info | debug
VITE_LOG_LEVEL=info
# Format: json | pretty (json recommended for production)
VITE_LOG_FORMAT=pretty

# Sentry Error Tracking (optional)
# Get your DSN from https://sentry.io
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development

# ===========================================
# Backend Environment Variables (normalizer-service/.env)
# ===========================================

# Server Configuration
PORT=3001
NODE_ENV=development

# AI API Keys (server-side only - NEVER expose to browser)
GEMINI_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Document Processing
MAX_FILE_SIZE_MB=100
MAX_PAGES=200

# Logging
LOG_LEVEL=info
LOG_FORMAT=pretty

# CORS (restrict in production)
CORS_ORIGIN=*
# CORS_ORIGIN=https://your-frontend.vercel.app

# Sentry Error Tracking (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
