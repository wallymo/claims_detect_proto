{
  "closeButton": {
    "backgroundColor": "transparent",
    "borderRadius": "border.radius.base",
    "color": "color.text.secondary",
    "padding": "spacing.2",
    "transition": "all 0.2s ease",
    "sizes": {
      "small": {
        "width": "24px",
        "height": "24px",
        "iconSize": "16px"
      },
      "medium": {
        "width": "32px",
        "height": "32px",
        "iconSize": "20px"
      },
      "large": {
        "width": "40px",
        "height": "40px",
        "iconSize": "24px"
      }
    },
    "states": {
      "hover": {
        "backgroundColor": "color.background.secondary",
        "color": "color.text.primary"
      },
      "active": {
        "transform": "scale(0.95)"
      },
      "disabled": {
        "opacity": "0.4",
        "cursor": "not-allowed"
      }
    }
  }
}
